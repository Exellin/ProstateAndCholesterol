<%= render 'shared/errors', obj: @comment %>
<%= form_for([@topic, @post, @comment], url: topic_post_comments_path) do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>