<div class="row">
  <div class="col-sm-3">
    <%= render 'shared/dashboard' %>
  </div>
  <div class="col-sm-9">
    <h2 align="center" >Medications</h2>
    
    <% if @profile.errors.any? %>
      <%= render 'shared/errors', obj: @profile %>
    <% end %>
    
    <%= form_for(@profile, :html => {class: "form-horizontal"}) do |f| %>
      
      <div class="table-scroll">
        <table>
          <thead>
            <tr>
              <th>Purpose</th>
              <th>Name</th>
              <th>Strength (mg)</th>
              <th>Dosage (times per day)</th>
              <th>Age Recommended</th>
              <th>Age Prescribed</th>
              <th>Month Last Used</th>
              <th>Year Last Used</th>
              <th>Are you still using this drug?</th>
            </tr>
          </thead>
          <tbody class="medications">
            <%= f.fields_for :medications do |medication| %>
              <%= render '/medications/medication_fields', f: medication %>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class="links">
        <%= link_to_add_association 'Add an entry', f, :medications, partial: 'medications/medication_fields',
        data: {"association-insertion-node" => "tbody.medications", "association-insertion-method" => "append" }%>
      </div>
      
      <%= f.submit "Update Medications", class: 'btn btn-primary btn-lg' %>
    <% end %>    
  </div>
</div>
