<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Sign Up</h2>

    <% if resource.errors.any? %>
      <%= render 'shared/errors', obj: resource %>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.text_field :username, class: 'form-control', placeholder: 'Username', autofocus: true %>

      <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
      
      <%= f.password_field :password, class: 'form-control',
      placeholder: 'Password', autocomplete: "off" %>

      <%= f.password_field :password_confirmation, class: 'form-control', 
      placeholder: 'Password Confirmation', autocomplete: "off" %>

      <%= f.submit "Sign up", class: 'btn-lg btn-info btn-block'%>
    <% end %>
  </div>
</div>
