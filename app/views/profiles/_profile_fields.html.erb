<div class="row">
  <div class="col-xs-12">
    <% if @profile.empty? %>
      <h2>Create Your Profile</h2>
    <% else %>
      <h2>Update Your Profile</h2>
    <% end %>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :first_name, "First Name" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autofocus:true %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :last_name, "Last Name" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :birth_year, "Birth Year" %>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :birth_year, class: "form-control", placeholder: "Birth Year" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :country, "Country" %>
      </div>
      <div class="col-sm-8">
        <%= f.select(:country, CS.countries.collect {|country| [country[1], country[0]]}) %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :administrative_division, "State/Province/Region" %>
      </div>
      <div class="col-sm-8">
        <% if @profile.country %>
          <%= f.select(:administrative_division, CS.states(@profile.country.to_sym).collect {|state| [state[1], state[0]]}) %>
        <% else %>
          <%= f.select(:administrative_division, CS.states(:us).collect {|state| [state[1], state[0]]}) %>
        <% end %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :city, "City" %>
      </div>
      <div class="col-sm-8">
        <% if @profile.country && @profile.administrative_division %>
          <%= f.select(:city, CS.cities(@profile.administrative_division, 
                                                 @profile.country.to_sym).collect {|city| [city, city]}) %>
        <% else %>
          <%= f.select(:city, CS.cities(:ak, :us).collect {|state| [city, city]}) %>
        <% end %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :years_in_current_locale, "Years resided within 200 miles/320km of your current residence" %>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :years_in_current_locale, class: "form-control", 
        placeholder: "Years resided within 200 miles/320km of your current residence" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :race, "Race" %>
      </div>
      <div class="col-sm-8">
        <%= f.select(:race, [['Caucasian'], ['Black'], ['Latino'], ['Middle Eastern'], 
        ['Asian'], ['Native Australian'], ['Native American']]) %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :ancestral_descent, "Ancestral Descent" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :ancestral_descent, class: "form-control", placeholder: "Ancestral Descent" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :age_noticed_symptoms, "Age Noticed Symptoms" %>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :age_noticed_symptoms, class: "form-control", placeholder: "Age Noticed Symptoms" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :age_urinary_malfunction, "Age Urinary Malfunction" %>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :age_urinary_malfunction, class: "form-control", placeholder: "Age Urinary Malfunction" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :age_bladder_infection, "Age Bladder Infection" %>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :age_bladder_infection, class: "form-control", placeholder: "Age Bladder Infection" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :story, "Your Story" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :story, class: "form-control", placeholder: "Tell us your story" %>
      </div>
    </div>
  </div>
</div>

<%= content_tag "div", id: "country_data", data: {country: @profile.country} do %>
<% end %>