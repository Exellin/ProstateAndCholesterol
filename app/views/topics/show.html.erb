<h2><%= @topic.name %></h2>
<% unless @topic.posts.blank? %>
  <% @posts.each do |post| %>
    <% unless post.deleted? %>
      <%= render(post) %>
    <% end %>
  <% end %>
  <%= will_paginate(@posts) %>
<% else %>
  <p>There are no posts under this topic</p>
<% end %>

<%= link_to "New Post", new_topic_post_path(@topic), class: "btn btn-primary" %>