<div class='row'>
  <div class='col-md-4 col-md-offset-4'>
    <h2>Change your password</h2>

    <% if resource.errors.any? %>
      <%= render 'shared/errors', obj: resource %>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <%= f.label :password, 'New password' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'New Password',
                                      autofocus: true, autocomplete: 'off' %>

      <%= f.label :password_confirmation, 'Confirm new password' %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'New Password Confirmation',
                                                   autocomplete: 'off' %>

      <%= f.submit 'Change my password', class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>

    <hr>

    <%= render 'devise/shared/links' %>
  </div>
</div>
